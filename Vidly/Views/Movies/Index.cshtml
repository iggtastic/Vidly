@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any()) {
    <p>There are no movies in the system</p>
} else {
    <table>
        <tbody>
            <tr><th>Movie</th></tr>
            @foreach (var movie in Model) {
                <tr><td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td></tr>
            }
        </tbody>
    </table>
}